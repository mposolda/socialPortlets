  <portlet>
    <portlet-name>GoogleFriendsPortlet</portlet-name>
    <portlet-class>org.gatein.security.oauth.portlet.google.GoogleFriendsPortlet</portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <portlet-info>
      <title>Google Friends Portlet</title>
    </portlet-info>
  </portlet>

</portlet-app>